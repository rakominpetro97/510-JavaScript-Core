            function checkEmail(str) {
                var emailPattern = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.-(2,3))+$/;
                if(mailPattern.test(str))
                {
                    console.log("Email is correct");
                }
                else
                {
                    console.log("Email is not correct!");
                    
                }
            }

            checkEmail('my_mail@gmail.c_m');

        
